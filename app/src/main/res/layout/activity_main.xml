<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:paddingTop="10dp"
    android:rowCount="13"
    tools:context=".GridXMLActivity">

    <ImageView
        android:id="@+id/ivDivider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/divider" />

    <TextView
        android:id="@+id/tvGreenTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="Drużyna 1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:text="Pozostało"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvRedTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:enabled="true"
        android:text="Drużyna 2"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvGreenTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvTimeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="60"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvRedTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="2"
        android:enabled="true"
        android:text="0"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/ivDivider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/divider"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWrongAnswer"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowSpan="7"
        android:layout_gravity="left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRightAnswer"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_rowSpan="7"
        android:layout_gravity="right" />


    <ImageView
        android:id="@+id/ivDivider3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:scaleType="fitXY"
        android:src="@drawable/divider"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvSecretWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Secret Word"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvWord1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="6"
        android:text="Word 1"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvWord2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="7"
        android:text="Word 2"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvWord3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="8"
        android:text="Word 3"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvWord4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="9"
        android:text="Word 4"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvWord5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="10"
        android:text="Word 5"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSkip"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClose"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"/>


</GridLayout>